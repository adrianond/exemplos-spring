<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>


    <!--
        Added the entity Categoria.
    -->
    <changeSet id="20201501092100-1" author="develop">
        <createTable tableName="categoria_produto">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="CATEGORIA" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="id_produto" type="bigint">
                <constraints nullable="true"/>
            </column>

        </createTable>

        <createSequence sequenceName="SEQ_CATEGORIA"/>

    </changeSet>
</databaseChangeLog>