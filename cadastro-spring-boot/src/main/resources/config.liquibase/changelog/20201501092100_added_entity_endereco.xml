<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>


    <!--
        Added the entity Endereco.
    -->
    <changeSet id="20201501092100-1" author="develop">
        <createTable tableName="endereco_empresa">
            <column name="codigo" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="endereco" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="numero_endereco" type="varchar(12)">
                <constraints nullable="false"/>
            </column>

            <column name="bairro" type="varchar(60)">
                <constraints nullable="false"/>
            </column>

            <column name="codigo_postal" type="varchar(8)">
                <constraints nullable="false"/>
            </column>

            <column name="complemento_endereco" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="cidade" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="estado" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="tipo" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createSequence sequenceName="SEQ_ENDERECO"/>

    </changeSet>
</databaseChangeLog>